font-size(s)
  font-size "calc(12px + %s)" % s

.content__skills
  display flex
  justify-content center
  align-items center
  background-image url("/src/assets/slash.png")
  border-top 1px dashed #253146
  margin-top 5vmin
  padding 0 5vmin
  font-size 0.3vmin
  &__effect
    display flex
    justify-content center
    flex-wrap wrap
    &__item
      display flex
      align-items center
      flex-direction column
      justify-content center
      cursor pointer
      margin 5vmin 5vmin
      width 25vmin
      height 25vmin
      border-radius 50%
      font-weight 200
      text-align center
      position relative
      color #fff
      background #253146
      -webkit-transition -webkit-transform ease-out 0.1s, background 0.2s
      -moz-transition -moz-transform ease-out 0.1s, background 0.2s
      transition transform ease-out 0.1s, background 0.2s
      &:after
        pointer-events none
        position absolute
        width 100%
        height 100%
        border-radius 50%
        content ''
        -webkit-box-sizing content-box
        -moz-box-sizing content-box
        box-sizing content-box
        top 0
        left 0
        padding 0
        box-shadow 0 0 0 2px #253146
        opacity 0
        -webkit-transform scale(0.9)
        -moz-transform scale(0.9)
        -ms-transform scale(0.9)
        transform scale(0.9)
      &:hover
        font-weight 500
        background #253146
        -webkit-transform scale(0.93)
        -moz-transform scale(0.93)
        -ms-transform scale(0.93)
        transform scale(0.93)
        color #fff
        &:after
          -webkit-animation sonarEffect 1.3s ease-out 75ms
          -moz-animation sonarEffect 1.3s ease-out 75ms
          animation sonarEffect 1.3s ease-out 75ms
      p
        margin 0
        padding 0 2.5vmin

@-webkit-keyframes sonarEffect
	0%
		opacity 0.3
	40%
		opacity 0.5
		box-shadow 0 0 0 2px rgba(255,255,255,0.1), 0 0 10px 10px #253146, 0 0 0 10px rgba(255,255,255,0.5)
	100%
		box-shadow 0 0 0 2px rgba(255,255,255,0.1), 0 0 10px 10px #253146, 0 0 0 10px rgba(255,255,255,0.5)
		-webkit-transform scale(1.5)
		opacity 0

@-moz-keyframes sonarEffect
	0%
		opacity 0.3
	40%
		opacity 0.5
		box-shadow 0 0 0 2px rgba(255,255,255,0.1), 0 0 10px 10px #253146, 0 0 0 10px rgba(255,255,255,0.5)
	100%
		box-shadow 0 0 0 2px rgba(255,255,255,0.1), 0 0 10px 10px #253146, 0 0 0 10px rgba(255,255,255,0.5)
		-moz-transform scale(1.5)
		opacity 0

@keyframes sonarEffect
	0%
		opacity 0.3
	40%
		opacity 0.5
		box-shadow 0 0 0 2px rgba(255,255,255,0.1), 0 0 10px 10px #253146, 0 0 0 10px rgba(255,255,255,0.5)
	100%
		box-shadow 0 0 0 2px rgba(255,255,255,0.1), 0 0 10px 10px #253146, 0 0 0 10px rgba(255,255,255,0.5)
		transform scale(1.5)
		opacity 0

@media screen and (max-width: 415px)
  .content__skills
    font-size 1.5vmin
    &__effect
      &__item
        width 60vmin
        height 60vmin

@media screen and (min-width: 416px) and (max-width: 768px)
  .content__skills
    font-size 1.3vmin
    &__effect
      &__item
        margin 4vmin 2vmin
        width 40vmin
        height 40vmin

