font-size(s)
  font-size "calc(12px + %s)" % s

.header
  display flex
  background-color #253146
  padding 5vmin
  // align-items baseline
  user-select none
  &__title
    color #f9ced5
    font-weight 800
    font-size 4vmin
    margin-right 10vmin
    height 5vmin
  &__menu
    display flex
    flex-grow 1
    font-weight 800
    cursor pointer
    height 5vmin
    line-height 5vmin
    &__close
      display none
      position absolute
      top 0
      right 0
      font-size 5vmax
      font-weight 100
      padding 5vmax
      color #253146
      cursor pointer
    &__btn
      display none
      background url("/src/assets/nav.png") no-repeat
      background-size 50px 50px
      height 50px
      width 50px
    &__links
      display flex
      justify-content space-between
      flex-grow 1
      &__item
        color #f9ced5
        &--active
          border-bottom 1px dashed #f9ced5
        &--sayhi
          color #f8ffe5
        a
          color #f9ced5
          text-decoration none

@media screen and (max-width: 980px)
  .header
    position relative
    &__title
     font-size 5vmax
     height auto
    &__menu
      position absolute
      right 5vmin
      height auto
      line-height initial
      align-items center
      &--open
        width 100%
        min-height calc(100vh - 0px)
        position absolute
        top 0
        left 0
        background #f9ced5
        cursor initial
        .header__menu
          position relative
          &__close
            display flex
          &__btn
            display none
          &__links
            display flex
            align-items center
            flex-direction column
            justify-content center
            min-height calc(100vh - 0px)
            font-size 5vmin
            font-weight 800
            line-height 25vmin
            &__item
              color #253146
              &--active
                border-bottom 1px dashed #253146
              a
                color #253146
      &__btn
        display flex
        margin-left auto
      &__links
        display none

  .header--open
    position initial
